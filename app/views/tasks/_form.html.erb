<%= form_with(model: task) do |form| %>
  <div class="field-group">
    <div class="label mb-2"><%= form.label :name %></div>
    <div class="input-field mb-4"><%= form.text_field :name %></div>
  </div>

  <div class="field-group">
    <div class="label mb-2"><%= form.label :family_member_id %></div>
    <div class="input-field mb-4"><%= form.collection_select :family_member_id, FamilyMember.all, :id, :name %></div>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
